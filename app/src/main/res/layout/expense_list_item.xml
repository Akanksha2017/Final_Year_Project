<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

        <RelativeLayout
            android:id="@+id/exp_layout_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/txt_exp_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp" />

            <TextView
                android:id="@+id/txt_exp_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_exp_date"
                android:padding="6dp" />

            <TextView
                android:id="@+id/txt_exp_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_exp_detail"
                android:padding="6dp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/exp_layout_item"
            android:background="@color/colorPrimaryDark" />

</RelativeLayout>